<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
    <!--Navbar-->

     
  <!-- Add item Modal  --> 
     <!-- *** add "hidden" inside below class to hide add product -->
     <div id="modalId" class="hidden bg-gray-900 h-full w-full  fixed z-10 bg-opacity-70 ">
      <div class="bg-white  mt-20 mr-auto ml-auto " style="width: 50%;">            
        <span id="crossId" class="cursor-pointer hover:text-red-500 float-right pr-2 text-gray-600  font-bold text-2xl ">&times;</span>
        <div class="block text-center p-10">

          <h1 class="text-center font-normal text-2xl text-blue-800 p-2" >Add product</h1>
          <form action="/products" method="POST" class="p-2 w-1/2 m-auto">
            <div class="block " >
              <input autocomplete="off" type="text" required style="width: 100%;"   class="mb-2 w-full border-2 p-2" id="titleID" name="title" placeholder="Title">
              <textarea  required class="translate-y-0 h-40  border-2  w-full  p-2" name="description" id="descriptionID" placeholder="Description" id="" cols="30" rows="10"></textarea>
            </div>
            <div class="block-inline w-full mb-4">

              <input type="number" autocomplete="off" required class=" w-full border-2 px-2 mb-2" id="priceID" name="price" placeholder="₹ Price" >
              <select id="categoryID" name="category" class="w-full bg-gray-200 border-2" required id="">
                <option value="">Category</option>
                <option value="sports">Sports</option>
                <option value="food">Food</option>
                <option value="electronics">Electronics</option>
                <option value="shoes">Shoes</option>
                <option value="books">Books</option>
                <option value="clothes">Clothes</option>
              </select>
            </div>
            <!-- <label for="upload">product image</label> -->
            <!-- <input name="upload" type="file"> -->
            <input type="submit" class="px-2 py-1 bg-blue-800 text-white w-full" placeholder="Add" name="" id="">
          </form>
        </div>
      </div>
    </div>


    <nav class="navbar navbar-expand-lg white mb-2 shadow-md text-blue-800">
      <a class="navbar-brand font-medium text-3xl" href="/dashboard">Apni Dukaan</a>
        
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <form class="form-inline my-1" action="/search" method="POST">
              <div class="block ">
                <input name="search" autocomplete="off" class="border bg-gray-200 px-2 outline-none text-black py-1 ml-80 w-96" type="text" placeholder="Search"
                  aria-label="Search">
              </div>
              <button class=" bg-blue-800  text-white  px-2 py-1 " type="submit">Search</button>
            </form>
        </ul>
        <ul class="navbar-nav ml-auto nav-flex-icons">
          <li class="nav-item avatar mr-3 text-2xl">
              <a class="nav-link p-0" href="#">
                  Admin
              </a>
          </li>
          <li class="nav-item avatar mr-5">
            <a class="nav-link p-0" href="#" onclick="checkout()">
              <i class="fas fa-shopping-cart fa-2x"></i>    
              </a>
          </li>
      </ul>
        
    </nav>
     

    <!-- display banner -->
    <!--Carousel Wrapper-->
    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100 " src="/img/1.png"
            alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/img/2.png"
            alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="/img/3.png"
            alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- content / fetch -->
    <div class="grid grid-cols-2 " style="grid-template-columns: 20% 80%">
      <!-- side bar -->
      <div class=" bg-gray-100  border-2 border-gray-500 text-3xl text-center">
          <h1 class="font-normal p-2">Categories</h1><br>
          <div class="ml-3 text-lg font-normal text-left text-blue-800">
        <a href="/dashboard" class="block">ALL</a>
        <a href="/category/sports" class="block">Sports & Fitness</a>
        <a href="/category/books" class="block">Books</a>
        <a href="/category/food" class="block">Food</a>
        <a href="/category/electronics" class="block">Electronics</a>
        <a href="/category/clothes" class="block">Clothes</a>
        <a href="/category/shoes" class="block">Shoes</a>
      </div>
      </div>

      <div class="grid grid-rows-2" style="grid-template-rows: 60px ">
          <div class="flex flex-center justify-center ">
            <h1 class="flex-1 text-center font-normal mt-2 text-3xl">Products</h1>
            <button id="addItemID" class="text-white px-2 mr-8  bg-blue-800 h-8 ">Add item</button>
          </div>
          
          <!-- cards  -->
        <div class="grid grid-cols-4 gap-4 p-6 mt-4 w-full">
          <!-- card template -->
      

          <!-- EJS -->

          <% data.forEach(element => { %> 
            <div class="card  p-2 border-1 hover:shadow-md bg-gray-100 hover:-translate-y-1 transform">
              <!-- image -->
              <a href="/product/<%=element._id%> ">
            <div class="">
              
              <img src="https://previews.123rf.com/images/virtaa/virtaa1509/virtaa150900261/45651498-shopping-bag-outline-icon-modern-minimal-flat-design-style-paper-bag-vector-illustration.jpg" class="object-cover w-full" alt="" />
              <!-- set fix h w -->
            </div>
          </a>
            <!-- product details -->
            <div class="pt-4 text-center">
              <h1 class="text-xl font-bold font-regular"><%= element.title  %> </h1>
              <h1 class="text-gray-400 text-sm hover:text-black">
                <%= element.description.slice(0,40) %>...
                
              </h1>
              <h1 class="font-bold font-mono mt-2 text-blue-800 text-2xl">₹<%=element.price  %>.00</h1>
              <div class="block">
                
                <h1 class="text-yellow-500 text-xl">★ ★ ★ ★ ★<%=element.rating  %></h1>
                
              </div>
              <div class="block w-full mt-4">

                <Button class="bg-blue-800 w-full hover:cursor-default rounded-sm bg-green-500 px-2 py-1 text-white" onclick="addToCart(this.id)" id=<%= element._id  %>  >Add to Cart</Button>
              </div>
            </div>
          </div>
        
          <% }); %> 
          <!--  -->

      </div>
      <!-- cards end -->
